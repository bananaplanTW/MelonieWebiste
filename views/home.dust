    <div class="search-area">
      <form class="search-box">
        <input id="search-input-box" type="text" class="search-input-box" value="ZIP Code or Location"/>
        <input type="button" class="search-submit-button" value="Search"/>
      </form>
    </div>
    <div class="main-container">
      <div class="center-rail">
        <div class="discover-headline">
          <h2>Run in your Favorite SPOT!</h2>
        </div>
          {#data.cities}
            {@math key=$idx method="mod" operand="3"}
              {@eq value=0} {!start!}
                <div class="row">
                  {>"templates/city-card"/}
              {/eq}
              {@eq value=2} {!end!}
                  {>"templates/city-card"/}
                </div>
              {/eq}
              {@default}
                  {>"templates/city-card"/}
              {/default}
            {/math}
          {/data.cities}
          {@math key=data.cities.length method="mod" operand="3"}
            {@ne value=2}
              </div>
            {/ne}
          {/math}
